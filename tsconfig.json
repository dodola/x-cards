{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules"],
  "include": [
    ".plasmo/index.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/ui/**/*.ts",
    "src/components/ui/**/*.tsx",
    ".next/types/**/*.ts",
    "src/options/*.tsx",
  ],
  
  "compilerOptions": {
    "paths": {
      "@*": ["./*"]
    },
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
